<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Update Post</title>
</head>
<body>

<div class="container mt-4">
    <h1>Update Request to: /{{post.teamName}}/{{stringPostType}}</h1>

    <form action="/{{post.teamName}}/{{stringPostType}}/{{post.id}}/update" method="post">
        <div class="mb-3">
            <label for="id" class="form-label">Post ID:</label>
            <input type="number" class="form-control" id="id" name="id" value="{{post.id}}" readonly>
        </div>

        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" class="form-control" id="title" name="title" value="{{post.title}}">
        </div>

        <div class="mb-3">
            <label for="contents" class="form-label">Contents:</label>
            <textarea class="form-control" id="contents" name="contents" rows="4">{{post.contents}}</textarea>
        </div>

        <!-- Additional fields like writerId can be included if needed -->

        <input type="hidden" id="postType" name="postType" value="{{post.postType}}">
        <input type="hidden" id="teamName" name="teamName" value="{{post.teamName}}">
        <input type="hidden" id="writerId" name="writerId" value="{{post.writerId}}">

        <button type="submit" class="btn btn-primary">Update Post</button>
    </form>

    <a href="/{{post.teamName}}/{{stringPostType}}" class="btn btn-secondary mt-3">Return to Post List</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>
