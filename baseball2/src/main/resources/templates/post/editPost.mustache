<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Update Post</title>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/{{teamName}}">Baseball</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/{{teamName}}/information">Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/{{teamName}}/question">Question</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/{{teamName}}/talk">Talk</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Select Team
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <li><a class="dropdown-item" href="/LG">LG</a></li>
                        <li><a class="dropdown-item" href="/KT">KT</a></li>
                        <li><a class="dropdown-item" href="/SSG">SSG</a></li>
                        <li><a class="dropdown-item" href="/NC">NC</a></li>
                        <li><a class="dropdown-item" href="/Doosan">Doosan</a></li>
                        <li><a class="dropdown-item" href="/KIA">KIA</a></li>
                        <li><a class="dropdown-item" href="/Lotte">Lotte</a></li>
                        <li><a class="dropdown-item" href="/Samsung">Samsung</a></li>
                        <li><a class="dropdown-item" href="/Hanhwa">Hanhwa</a></li>
                        <li><a class="dropdown-item" href="/Kiwoom">Kiwoom</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="/mypage">my Page</a></li>
                <li class="nav-item"><a class="nav-link" href="/logout">logout</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <h1>Edit Post</h1>

    <form action="/{{post.teamName}}/{{stringPostType}}/{{post.id}}/update" method="post">
        <div class="mb-3">
            <label for="id" class="form-label">Post ID:</label>
            <input type="number" class="form-control" id="id" name="id" value="{{post.id}}" readonly>
        </div>

        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" class="form-control" id="title" name="title" value="{{post.title}}">
        </div>

        <div class="mb-3">
            <label for="contents" class="form-label">Contents:</label>
            <textarea class="form-control" id="contents" name="contents" rows="4">{{post.contents}}</textarea>
        </div>

        <!-- Additional fields like writerId can be included if needed -->

        <input type="hidden" id="postType" name="postType" value="{{post.postType}}">
        <input type="hidden" id="teamName" name="teamName" value="{{post.teamName}}">
        <input type="hidden" id="writerId" name="writerId" value="{{post.writerId}}">

        <button type="submit" class="btn btn-primary">Update Post</button>
        <button class="btn btn-dark" onclick="location.href='/{{post.teamName}}/{{stringPostType}}'">Back to Post List</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>
