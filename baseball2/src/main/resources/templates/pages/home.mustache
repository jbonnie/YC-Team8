            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/{{teamName}}/information">Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/{{teamName}}/question">Question</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/{{teamName}}/talk">Talk</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Select Team
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <li><a class="dropdown-item" href="/team1">Team1</a></li>
                        <li><a class="dropdown-item" href="/team2">Team2</a></li>
                        <li><a class="dropdown-item" href="/team3">Team3</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <h1 class="mt-5">{{teamName}}</h1>
    <!-- Your content goes here -->
</div>

